@using Dominio.Entidades

@if (@ViewBag.Mensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<h1>Registrarse como peón</h1>

<form method="post">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" id="email" name="email">

    <label for="contrasenia" class="form-label">Contraseña</label>
    <input name="contrasenia" type="password" id="contrasenia" class="form-control" aria-describedby="passwordHelpBlock">
    <div id="passwordHelpBlock" class="form-text">
        La Contraseña no puede ser vacia y debe contener un minimo de 8 caracteres.
    </div>

    <label for="nombre" class="form-label">Nombre</label>
    <input name="nombre" type="text" class="form-control" id="nombre">

        <label class="form-label" for="residente">Residente</label>
        <select name="residente" id="residente" class="form-select">
            <option selected>Elija una opcion</option>
            <option value="true">Si</option>
            <option value="false">No</option>
        </select>

    <button class="btn btn-outline-secondary" type="submit">Crear</button>
</form>