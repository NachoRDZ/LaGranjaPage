@using Dominio.Entidades

@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Mensaje
    </div>
}

<form method="post">
    <input class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" type="text" name="email" placeholder="Correo electronico" />
    <input class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" type="password" name="password" placeholder="Contraseña" />
    <button class="btn btn-outline-secondary" type="submit">Ingresar</button>
    <a href="/Usuario/Registrarse" class="link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Registrarse</a>
</form>



